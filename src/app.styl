theme(var, lightness)
    if var == 'dark'
       background-color #292f36 !important
    else 
        background-color #fff

html
    box-sizing border-box
    height 100%

*, *::before, *::after
    box-sizing inherit
    font-family inherit

body
    display flex
    justify-content center
    align-items center
    height 100%
    font-family Roboto
    font-weight 400
    margin 0
    padding 0
    background radial-gradient(#ff4081 0%, #3f51b5 100%)

main
    display flex
    margin auto

.button
    width 80px !important
    height 80px !important
    min-width 80px !important
    font-size 18px !important // Override Material Ui inline styles
    
.calculator
    display flex
    flex-wrap wrap
    margin 0 auto
    width 320px
    theme('light', false)
    box-shadow 0 19px 38px rgba(19, 19, 19, .24), 
               0 15px 12px rgba(19, 19, 19, .12)

.display
    display block
    width 320px  !important
    height 80px
    padding 0 30px
    border none
    outline none
    font-size 32px
    text-align right
    color #fff
    background-color lightness(#292f36, 25%)

.functions
    display flex
    width 240px

.digits
    display flex
    flex-flow row wrap-reverse
    width 240px

.operators
    display flex
    flex-direction column
    width 80px